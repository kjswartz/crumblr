
<%= form_for(@post) do |f| %>
<div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :kind %>
    <%= f.select :kind, ["text", "image"], {}, class: 'form-control'%>
    </div

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
<br>
  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-primary'%>
  </div>
  <% end %>

  <%= link_to 'Back', posts_path %>
</div>
